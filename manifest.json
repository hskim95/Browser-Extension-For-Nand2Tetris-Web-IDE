{
    "manifest_version": 3,
    "name": "Backup Tool for Nand2Tetris",
    "version": "1.0.0",
    "description": "이 확장앱은 Nand2Tetris Web-IDE 사용 중 데이터 유실을 방지하기 위한 목적의 백업 및 복원 기능을 지원하기 위해 개발되었습니다.",
    "icons": {},
    "action": {
        "default_icon": {
            "16": "Extension16.png",
            "32": "Extension32.png",
            "128": "Extension128.png"
        },
        "default_title": "Backup Tool for Nand2Tetris - Save and Load your code.",
        "default_popup": "popup.html",
        "default_state": "disabled"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://nand2tetris.github.io/web-ide/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "scripting",
        "storage",
        "notifications"
    ],
    "host_permissions": [
        "https://nand2tetris.github.io/web-ide/*"
    ]
}
